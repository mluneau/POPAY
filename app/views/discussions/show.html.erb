<h1><%= @discussion.topic %></h1>
<div id="messages" data-discussion-id="<%= @discussion.id %>">
  <% @discussion.messages.each do |message| %>
      
    <% if current_user.id == message.user_id %>
      
      <div class="chat-bubble-employee" id="message-<%= message.id %>">
      This is me:
        <i class="time">
          <small><%= message.created_at.strftime("%l:%M%p") %></small>
        </i>
        <p><%= message.content %></p>
      </div>
    
    <% else %>
    
      <div class="chat-bubble-hr" id="message-<%= message.id %>">
        This is hr:
        <i class="time">
          <small><%= message.created_at.strftime("%l:%M%p") %></small>
        </i>
        <p><%= message.content %></p>
      </div>

    <% end %>
      
  <% end %>
</div>

<%= simple_form_for [ @discussion, Message.new ] do |f| %>
  <%= f.input :content, label: false, placeholder: "Message ##{@discussion.topic}" %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
