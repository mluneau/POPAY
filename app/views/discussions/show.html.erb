<h1><%= @discussion.topic %></h1>
<div id="messages" data-discussion-id="<%= @discussion.id %>">
  <% @discussion.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.first_name %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<%= simple_form_for [ @discussion, Message.new ] do |f| %>
  <%= f.input :content, label: false, placeholder: "Message ##{@discussion.topic}" %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
