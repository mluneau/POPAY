<div class="action-container">

  <div class="option-tabs">
    <div class="action-new discussion">
      Discussions
    </div>
    <div class="action-new appointment">
        Rendez-vous
    </div>
  </div>

    <%= simple_form_for @discussion, url: discussions_path do |f| %>
      <%= f.input :topic, label: false, placeholder: "Topic" %>
      <%= f.input :hr_id, label: false, placeholder: "HR", collection: User.where(company: current_user.company).where(position: position = 'hr').map {|user| user.first_name} %>
      
    <% end %>
  </div>

</div>



