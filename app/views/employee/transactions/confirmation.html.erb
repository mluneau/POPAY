<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= stylesheet_link_tag wicked_pdf_asset_base64("pdf") %>
    <title>Confirmation d'acompte sur salaire</title>
  </head>

  <body onload='number_pages'>
    <div id="pdf_photo">
      <%= image_tag wicked_pdf_asset_base64('Logo Popay.png'), width: 40, height: 35 %>
    </div>
    <h1 id="pdf_title">
      Confirmation d'acompte sur salaire
    </h1>
    <h3>
      Nom: <%= @transaction.user.last_name %>
    </h3>
    <h3>
      Prénom: <%= @transaction.user.first_name %>
    </h3>
    <h3>
      Entreprise: <%= @transaction.user.company.name %>
    </h3>
    <h3>
    Montant de l'acompte: <%= @transaction.amount %> €
    </h3>
    <p>
    Date de la demande: <%= @transaction.due_date %>
    </p>


    </h3>

  </body>
</html>