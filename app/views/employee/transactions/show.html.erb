<div class="transaction-confirmation__title">
  <h5><i class="fas fa-check-circle"></i></h5>
  <h5>Demande validée !</h5>
  <h2>Merci pour votre confiance ! 🙏</h2>
</div>
<h5>Demande d'acompte</h5>

<div class="transaction-confirmation__info_container">

  <div class="transaction-confirmation__info">
      <p><strong>Informations</strong></p>
      <p><strong>Date de la demande :</strong> <%= localize(@transaction.created_at, format: "%d %B %Y") %></p>
      <p><strong>Acompte de :</strong> <%= @transaction.amount %> € </p>
      <p><strong>Compte bancaire :</strong> <%= @transaction.bank_account.bank_name %> - <%= @transaction.bank_account.iban %></p>
      <% if @transaction.comment != "" %>
        <p><strong>Votre commentaire :</strong> <%= @transaction.comment %></p>
      <% else %>
        <p><strong>Votre commentaire :</strong> Pas de commentaire</p>
      <% end %>
  </div>
  <div class="transaction-confirmation__pdf">
    <p><strong>Compte rendu</strong></p>
    <div class="text-center" id="pdf-logo">
    <%= link_to confirmation_employee_transaction_path(@transaction), target: :_blank do %>
      <div><i class="far fa-file-pdf" style="padding-top: 12px"></i>
      <% end %>
      </div>
    </div>
  </div>
</div>
