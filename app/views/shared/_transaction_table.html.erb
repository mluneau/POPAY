          <img id="avatar-mobile" class="avatar-mobile" src="<%= cl_image_path current_user.avatar.key, height: 300, width: 300, crop: :fill %>" />
        <% else %>
          <img id="avatar-mobile" class="avatar-mobile" src="https://creai-grand-est.fr/bundles/admin/images/user-empty-avatar.png" />
        <% end %>
      </th>

      <td><%= transaction.user.full_name %></td>
      <td><%= transaction.amount %></td>
      <td><%= localize(transaction.due_date, format: "%d %B %Y") %></td>
