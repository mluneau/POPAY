<!-- browse buttons -->

<div class="d-flex justify-content-around">
  <%= link_to "Tous", articles_path, class: 'button_category' %>
  <% ApplicationController::ARTICLE_CATEGORIES.each do |article_category| %>
  <%= link_to article_category, articles_path(category: article_category), class: "button_category#{'-selected' if params[:category] == article_category}" %>
  <% end %>
</div>

<div style="padding-bottom: 100px">
  <% @articles.each do |article| %>
  <%= link_to article_path(article), class:"link-card" do %>
    <div class="card-product_article">
      
        <%= cl_image_tag article.photo.key %>
        <div class="card-product-infos">
          <h2><%= article.title %></h2>
          <p><%= article.content.first(100) %>...</p>
        </div>
        <div class="clock">
          <div class="clockbis">
            <i class="far fa-clock" style="padding-right: 4px"></i><%= article.time %>''
          </div>
        </div>
  
      
    </div>
    <% end %>
  <% end %>
</div>

